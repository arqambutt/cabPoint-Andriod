<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingTop="@dimen/_40sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How It Works?"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/cab_text"/>

        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/cab_text"
            android:textSize="@dimen/_12ssp"
            android:text="Every time a new CAB Point user signs up with\nyour invite code, they'll get 15 pounds off each of their first 3 rides."/>

        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/cab_text"
            android:textSize="@dimen/_12ssp"
            android:text="Once they take their first ride, you'll automatically get 15 pounds off each of your next 3 rides."/>


        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/cab_text"
            android:textSize="@dimen/_12ssp"
            android:text="Discounts apply automatically in your country and expires 90 days from their issue date."/>

    </LinearLayout>
</LinearLayout>