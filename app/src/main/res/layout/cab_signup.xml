<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/rel_icon"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/cab_bk_linear"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:src="@drawable/icon" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/taxi"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_icon"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/user_img"
                        android:textSize="@dimen/_20ssp" />

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#44ffffff"
                        android:hint="NAME"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_7sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#66000000"
                        android:textSize="@dimen/_14ssp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/envelope"

                        />

                    <EditText
                        android:id="@+id/userEmail"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#44ffffff"
                        android:hint="EMAIL"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_7sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#66000000"
                        android:textSize="@dimen/_14ssp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <net.rimoto.intlphoneinput.IntlPhoneInput
                        android:id="@+id/mobileNumber"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/mobile_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:ems="10"
                        android:inputType="phone"
                        android:textAlignment="center"
                        app:textSize="@dimen/_15ssp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/housekey"
                        android:textSize="@dimen/_20ssp" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#44ffffff"
                        android:hint="PASSWORD"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_7sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#66000000"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>

                <Button
                    android:id="@+id/signUpBtn"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/btn_selector_white"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="#06BFC3"
                    android:textSize="@dimen/_20ssp" />

                <com.apps.cabpoint.cabigate.views.MobiTextView
                    android:id="@+id/txt_already"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Already have an account? Login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>