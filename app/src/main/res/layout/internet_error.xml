<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cab_text_dark"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:background="@drawable/ripple_effect"
                android:id="@+id/nav_menu"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/ic_menu_white" />

            <TextView
                android:id="@+id/txt_connectivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="@string/no_connectivity"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_connectivity_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_connectivity"
                android:layout_below="@id/txt_connectivity"
                android:text="@string/please_check_your_internet_connection"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/img_wifioff"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_no_wifi" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

