<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_menu_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_50sdp">

        <ImageView
            android:id="@+id/img_globe"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/globe"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/img_dot_line"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_29sdp"
            android:layout_below="@+id/img_globe"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/dot_barline"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/img_marker_black"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/img_dot_line"
            android:layout_marginLeft="@dimen/_12sdp"
            android:src="@drawable/marker_black"
            android:tint="@color/white" />

        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:id="@+id/txt_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toRightOf="@+id/img_globe"
            android:text="To:"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:id="@+id/request_wating_to_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toRightOf="@id/txt_to"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Name will be sceen soon"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:id="@+id/txt_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toRightOf="@+id/img_marker_black"
            android:text="From:"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:id="@+id/request_wating_from_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toRightOf="@id/txt_from"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Name will be sceen soon"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp">


        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:id="@+id/text_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Please, wait..."
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />

        <Button
            android:id="@+id/cancel_request_btn"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:text="Cancel Request" />

        <com.apps.cabpoint.cabigate.views.MobiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_wait"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:text="@string/requesting_text"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />

    </RelativeLayout>

</RelativeLayout>