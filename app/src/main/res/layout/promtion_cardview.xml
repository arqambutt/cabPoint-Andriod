<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/promotion_card"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="@dimen/_1sdp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <com.apps.cabpoint.cabigate.views.MobiTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Coupon:"
                    android:textColor="@color/cab_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"/>

                <com.apps.cabpoint.cabigate.views.MobiTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="DESCRIPTION:"
                    android:textColor="@color/cab_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"/>

                <com.apps.cabpoint.cabigate.views.MobiTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="EXPIRY:"
                    android:visibility="gone"
                    android:textColor="@color/cab_text"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp">

                <com.apps.cabpoint.cabigate.views.MobiTextView
                    android:id="@+id/txt_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LHR10"
                    android:textColor="@color/cab_text"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"/>


                <com.apps.cabpoint.cabigate.views.MobiTextView
                    android:id="@+id/txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10% discount on all packages"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/cab_text"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"/>


                <com.apps.cabpoint.cabigate.views.MobiTextView
                    android:id="@+id/txt_expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 days Left"
                    android:layout_gravity="end"
                    android:textColor="@color/cab_text"
                    android:textSize="@dimen/_10ssp"
                    android:padding="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>