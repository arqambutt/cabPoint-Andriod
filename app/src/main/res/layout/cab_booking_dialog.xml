<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E6E6E6"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/_20sdp">
        <LinearLayout
            android:id="@+id/rel_txt_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:background="@color/cab_text">

         <com.apps.cabpoint.cabigate.views.MobiTextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="BOOKING"
             android:textSize="@dimen/_18ssp"
             android:textColor="@color/white"
             android:layout_gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/rel_txt_contact"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_centerHorizontal="true">

            <com.apps.cabpoint.cabigate.views.MobiTextView
                android:id="@+id/txt_internet_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <com.apps.cabpoint.cabigate.views.MobiTextView

                android:id="@+id/txt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel?"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_internet_error"/>

            <EditText
                android:id="@+id/et_reason"
                android:layout_below="@+id/txt_cancel"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_50sdp"
                android:hint="State your reason"
                android:textColorHint="#55000000"
                android:textSize="@dimen/_10ssp"
                android:gravity="center"
                android:background="@null"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_yes"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/white"
                android:text="Yes"
                android:textSize="@dimen/_10ssp"
                android:textColor="#06BFC3"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/et_reason"/>

            <Button
                android:id="@+id/btn_no"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/cab_text"
                android:text="No"
                android:layout_toRightOf="@id/btn_yes"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/et_reason"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
